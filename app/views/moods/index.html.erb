<p id="notice"><%= notice %></p>

<h1>Listing Moods</h1>

<table>
  <thead>
    <tr>
      <th>Color</th>
      <th>Mood</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  
    <% @user.mood.each do |mood| %>
      <tr>
        <td> <%= mood.color %></td>
        <td> <%= mood.mood %></td>
        <td> <%= link_to ' Show ', mood, class: "btn btn-xs btn-default" %></td>

	<td><%= link_to ' Edit ', edit_mood_path(mood),  class: "btn btn-xs btn-default" %></td>

	<td><%= link_to ' Delete ', mood, method: :delete, data: { confirm: 'Are you sure?' },   class: "btn btn-xs btn-default" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Mood', new_mood_path,  class: "btn btn-md btn-primary" %>
