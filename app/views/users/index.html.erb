<p id="notice"><%= notice %></p>

<h1>List of Users</h1>


<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>

      	<% @view_user = User.find(user.id) %>

      <tr>
      	<td><%= user.username %></td>
      	<td><%= user.email %></td>
      	<td><a href="<%= following_user_path(@view_user) %>">
   		 	<strong id="following" class="stat">
     	 	<%= @view_user.following.count %>
   		 	</strong>
    		following
  			</a>
  		</td>
  		<td>
  			<a href="<%= followers_user_path(@view_user) %>">
   			<strong id="followers" class="stat">
      		<%= @view_user.followers.count %>
    		</strong>
    		followers
 			 </a>
 		</td>
 		<td>
		  <div id="follow_form">
		  <% if current_user.id != @view_user.id %>
			  <% if current_user.following?(@view_user) %>
			    <%= render 'unfollow' %>
			  <% else %>
			    <%= render 'follow' %>
			  <% end %>
		  <% end %>
		  </div>
 		</td>

      </tr>

    <% end %>
  </tbody>
</table>

