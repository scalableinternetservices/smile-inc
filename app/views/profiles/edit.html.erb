<h1>EDIT Profile Page</h1>

<div class="gravatar_edit">
  <%= gravatar_for @user %>
  <!-- Will need to replace gravatar with PaperClip  -->
  <a href="http://gravatar.com/emails" target="_blank"> <br/>change profile picture</a>
</div>

<p> INFORMATION </br>

<%= form_for("user", :url => user_session_path, html: {method: :put} ) do |f| %>

  <%= f.label :username %>
  <%= f.text_field :username, class: 'form-control' %> <br/>
  
  <%= f.label :email %>
  <%= f.email_field :email, class: 'form-control' %> <br/>

  <%= f.label :description %>
  <%= f.text_field :description, class: 'form-control' %> <br/>

  <%= f.label :password %>
  <%= f.password_field :password, class: 'form-control' %> <br/>
  
  <%= f.label :password_confirmation, "Confirmation" %> 
  <%= f.password_field :password_confirmation, class: 'form-control' %> <br/ >
    
  <%= f.submit "Save changes", class: "btn btn-primary" %>
  <% end %>

</p>
