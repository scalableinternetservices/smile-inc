<!DOCTYPE html>
<html>
<head>
  <title>Chroma</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag "//www.google.com/jsapi", "chartkick" %>
  <%= csrf_meta_tags %>
</head>

<body>
<!-- beg of Navigation bar -->
<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <nav>
      <ul class="nav navbar-nav navbar-left">
	<li><%= link_to 'Home', root_path %></li>
	<% if user_signed_in? %>
	<p class="navbar-text navbar-left"> Signed in as <%= current_user.username%> </p>

      </ul>
	<ul class="nav navbar-nav navbar-right">
	<li><%= link_to('Logout', destroy_user_session_path, :method => :delete) %></li>
	<li><%= link_to('Profile', profile_path(current_user)) %></li>
	<% else %>
	<li><%= link_to 'Register', new_user_registration_path %></li> <li><%= link_to 'Sign in', new_user_session_path %></li>


	<% end %>
      <!-- end of Navigation bar -->
      </ul>
    </nav>
  </div>
</header>



<div class="container" >

    <%= form_tag(users_path, :method => "get", class: "navbar-form", id: "search-form") do %>
    <div class="input-append" style="float:right">
      <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Username" %>
      
      <button class="btn" type="submit">Search</button>
  
    </div>
    <% end %>

  <%= yield %>
</div>

</body>
</html>
