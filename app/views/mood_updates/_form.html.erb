<%= form_for(@mood_update) do |f| %>
  <% if @mood_update.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@mood_update.errors.count, "error") %> prohibited this mood_update from being saved:</h2>

      <ul>
      <% @mood_update.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :mood_id %><br>
    <% mood_list = Mood.using(:moodshard).where(user_id: current_user.id) %>
    <%= collection_select(:mood_update, :mood_id, mood_list, :id, :mood) %>
    <!-- <%= collection_select(:mood_update, :mood_id, current_user.mood.all, :id, :mood) %>  -->
  </div>
  <div class="field">
    <%= f.label :desc %><br>
    <%= f.text_field :desc %>
  </div>
  <div class="field">
    <%= f.label :intensity %><br>
    <%= f.number_field :intensity %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
