<p id="notice"><%= notice %></p>


<h1>Listing Mood Updates</h1>

<table>
  <thead>
    <tr>
      <th>Mood</th>
      <th>Desc</th>
      <th>Intensity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @current_id = current_user.id %>
    <% @mood_updates = MoodUpdate.using(:moodshard).where(user_id: @current_id) %>
    <% @mood_updates.each do |mood_update| %>
      <tr>
        <td><%= mood_update.mood.mood %></td>
        <td><%= mood_update.desc %></td>
        <td><%= mood_update.intensity %></td>
        <td><%= link_to 'Show', mood_update %></td>
        <td><%= link_to 'Edit', edit_mood_update_path(mood_update) %></td>
        <td><%= link_to 'Destroy', mood_update, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= 
chart_points = {}
@mood_updates.each do |mood_update|
    chart_points[mood_update.created_at] = mood_update.intensity
end

line_chart chart_points %>

<br>

