<?xml version="1.0"?>
<!DOCTYPE tsung SYSTEM "/home/ec2-user/opt/tsung-1.5.0/share/tsung/tsung-1.0.dtd">
<tsung loglevel="notice" version="1.0">

  <clients>
    <client host="localhost" use_controller_vm="true" maxusers="30000"/>
  </clients>

  <servers>
    <server host="ec2-52-32-215-55.us-west-2.compute.amazonaws.com" port="80" type="tcp"/>
  </servers>


  <load>
    <arrivalphase phase="1" duration="20" unit="second">
      <users arrivalrate="1" unit="second"/>
    </arrivalphase>
    <arrivalphase phase="2" duration="20" unit="second">
      <users arrivalrate="2" unit="second"/>
    </arrivalphase>
    <arrivalphase phase="3" duration="20" unit="second">
      <users arrivalrate="4" unit="second"/>
    </arrivalphase>

    <arrivalphase phase="4" duration="20" unit="second">
      <users arrivalrate="8" unit="second"/>
    </arrivalphase>
<!--    
    <arrivalphase phase="5" duration="20" unit="second">
      <users arrivalrate="16" unit="second"/>
    </arrivalphase>
  -->
  </load>

  <options>
    <option name="global_ack_timeout" value="2000"/>

    <option type="ts_http" name="user_agent">
      <user_agent probability="100">Mozilla/5.0 (Windows; U; Windows NT 5.2; fr-FR; rv:1.7.8) Gecko/20050511 Firefox/1.0.4</user_agent>
    </option>
  </options>

  <sessions>
    <session name="http-example" probability="100" type="ts_http">
      <request>
        <http url="/" version="1.1" method="GET"/>
      </request>

      <request>
        <dyn_variable name="authenticity_token" ></dyn_variable> 
        <http url="/users/sign_up" version="1.1" method="GET"></http>
      </request>

      <thinktime value="2" random="true"></thinktime>

      <setdynvars sourcetype="random_string" length="9">
        <var name="random_username" />
      </setdynvars>
      <setdynvars sourcetype="random_string" length="9">
        <var name="random_password" />
      </setdynvars>

      <request subst="true">
        <http 
          url='/users'
          version='1.1'
          method='POST'
          contents='
                    authenticity_token=%%_authenticity_token%%&amp;
                    user%5Bemail%5D=%%_random_username%%%40test.com&amp;
                    user%5Busername%5D=%%_random_username%%&amp;
                    user%5Bpassword%5D=%%_random_password%%&amp;
                    user%5Bpassword_confirmation%5D=%%_random_password%%&amp;
                    commit=Sign+up'>
        </http>
      </request>

      <thinktime value="1" random="true"></thinktime>

      <!-- Have users create new moods -->

      <request>
        <dyn_variable name="authenticity_token" ></dyn_variable>
        <http url='/moods/new' version="1.1" method="GET"></http>
      </request>

      <thinktime value="2" random="true"></thinktime>

      <request subst="true">
        <http 
          url='/moods'
          version='1.1'
          method='POST'
          contents='authenticity_token=%%_authenticity_token%%&amp;
                    mood%5Bcolor%5D=red&amp;
                    mood%5Bmood%5D=angry&amp;
                    commit=Create+Mood'>
        </http>
      </request>
    
      <thinktime value="1" random="true"></thinktime>

      <request>
        <dyn_variable name="authenticity_token" ></dyn_variable>
        <http url='/moods/new' version="1.1" method="GET"></http>
      </request>

      <thinktime value="2" random="true"></thinktime>

      <request subst="true">
        <http 
          url='/moods'
          version='1.1'
          method='POST'
          contents='authenticity_token=%%_authenticity_token%%&amp;
                    mood%5Bcolor%5D=blue&amp;
                    mood%5Bmood%5D=sad&amp;
                    commit=Create+Mood'>
        </http>
      </request>

      <!-- Have users make updates with moods -->




    </session>
  </sessions>
</tsung>
