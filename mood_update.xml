<?xml version="1.0"?>
<!DOCTYPE tsung SYSTEM "/home/ec2-user/opt/tsung-1.5.0/share/tsung/tsung-1.0.dtd">
<tsung loglevel="notice" version="1.0">

  <!-- Client side setup -->
  <clients>
    <client host="localhost" use_controller_vm="true" maxusers='15000'/>
  </clients>

 <servers>
    <server host="ec2-52-34-89-68.us-west-2.compute.amazonaws.com" port="80" type="tcp"/>
  </servers>

  <load>
    <arrivalphase phase="1" duration="10" unit="second">
      <users arrivalrate="1" unit="second"></users>
    </arrivalphase>
  </load>

  <options>
    <!-- Set connection timeout to 2 seconds -->
    <option name="global_ack_timeout" value="2000"></option>

    <option type="ts_http" name="user_agent">
      <user_agent probability="100">Mozilla/5.0 (Windows; U; Windows NT 5.2; fr-FR; rv:1.7.8) Gecko/20050511 Firefox/1.0.4</user_agent>
    </option>
  </options>


  <!-- Modification for updating moods-->
  <sessions>
    <session name="update-mood" probability="100" type="ts_http">
      <!-- Home page -->
      <request>
        <http url='/' version='1.1' method='GET'></http>
      </request>
      
      <!-- Click Sign up  button-->
      <request>
	<http url='/users/sign_up' version='1.1' method='GET'></http>
      </request>

      <setdynvars sourcetype="random_string" length='9'>
	<var name="random_username" />
      </setdynvars>

      <setdynvars sourcetype="random_string" length='9'>
	<var name="random_password" />
      </setdynvars>

      
      <request>
	<http url='/users/sign_up'
	      version='1.1'
	      method='POST'
	      contents='user%5Busername%5D=%%_random_username%%&amp;
			user%5Bemail%5D=%%_random_username%%@jenni.com&amp;
			user%5Bpassword%5D=%%_random_password%%&amp;
			user%5Bpassword_confirmation%5D=%%_random_password%%&amp;
			commit=Sign+up'></http>
      </request>
      
      <!-- wait a bit for the user to find mood page -->
      <thinktime value='3' random='true'></thinktime>

      <!-- click moods page -->
      <request>
	<http url='/moods' version='1.1' method='GET'></http>
      </request>

      <thinktime value='3' random='true'></thinktime>
      <!-- create a mood -->
      <request>
	<http url='/moods/new' version='1.1' method='GET'></http>
      </request>

            <thinktime value='3' random='true'></thinktime>
      <!-- insert mood -->
      <request>
	<http url='/moods/new' version='1.1'
	      method='POST'
	      contents='user%5Bcolor%5D=junk&amp;
			user%5Bmood%5D=red&amp;'
	                ></http>
      </request>
      
    </session>
  </sessions>
</tsung>
